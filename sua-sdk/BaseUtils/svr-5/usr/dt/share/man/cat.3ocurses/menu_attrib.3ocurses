       #include <menu.h>

       int   set_menu_fore(MENU   *menu,   chtype  attr);  chtype
       menu_fore(MENU  *menu);  int   set_menu_back(MENU   *menu,
       chtype    attr);   chtype   menu_back(MENU   *menu);   int
       set_menu_grey(MENU    *menu,    chtype    attr);    chtype
