#
# /etc/init.d/funcs
#
# Rcsid = $Id: funcs#2 2007/10/11 09:16:35 FAREAST\\dbansa $
#

killall()
{
    # find all instances of the program we want to kill
    #
typeset pids=$(ps -ewo "pid,comm" | grep "[/ ]${1}$" | awk '{print $1 ;}')
    
# for each PID, send it a kill signal
    #
    echo $pids | while read pid; do
	if [ "${pid}" != "" ]; then 
	    kill -TERM ${pid}
	fi
    done
}
