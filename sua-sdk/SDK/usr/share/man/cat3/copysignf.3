NAME
     copysign, copysignf, copysignl -- copy sign

LIBRARY
     Math Library (libm, -lm)

SYNOPSIS
     #include <math.h>

     double
     copysign(double x, double y);

     float
     copysignf(float x, float y);

     long double
     copysignl(long double x, long double y);

